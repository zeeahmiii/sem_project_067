extends layout

block content
  - var total=0;


  table.table 
    thead 
      th Name 
      th Price 
      th Action
    tbody 
      each item in cart 
        - total += Number(item.Price) 
        tr 
          td=item.Name 
          td=item.Price
          td
            a(href="/product/cart/remove/"+item._id, class="btn btn-danger") Remove  
      tfoot 
        tr 
          td Total  
          td=total  
